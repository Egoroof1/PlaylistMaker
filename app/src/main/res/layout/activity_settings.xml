<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <TextView
        android:id="@+id/btn_back_to_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto"
        android:text="@string/settings"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/sting_and_icon"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_16">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto"
            android:text="@string/black_theme"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/sting_and_icon"/>

        <Switch
            android:id="@+id/sw_isBlackTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>


    <TextView
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="@dimen/dp_16"
        android:text="@string/share_app"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/sting_and_icon"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/btn_support"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="@dimen/dp_16"
        android:text="@string/write_to_support"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/sting_and_icon"
        app:drawableEndCompat="@drawable/ic_support" />

    <TextView
        android:id="@+id/btn_agreement"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:gravity="center_vertical"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="@dimen/dp_16"
        android:text="@string/user_agreement"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/sting_and_icon"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />


</LinearLayout>