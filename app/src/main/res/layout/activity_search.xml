<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_activity">

    <com.google.android.material.appbar.MaterialToolbar
        style="@style/toolbar"
        android:id="@+id/toolbar"
        app:title="@string/search"
        android:layout_marginBottom="0dp"
        app:navigationIcon="@drawable/ic_back_arrow_24"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_forms"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginVertical="8dp"
        android:paddingHorizontal="@dimen/dp_12">

        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:drawableStart="@drawable/ic_search_16"
            android:drawablePadding="8dp"
            android:drawableTint="@color/color_edittext_hint"
            android:background="@drawable/bg_forms"
            android:inputType="text"
            android:hint="@string/search"
            android:textColorHint="@color/color_edittext_hint"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textSize="@dimen/sp_16"
            android:lines="1"
            android:maxLength="40"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textColor="@color/color_edittext_text"/>

        <ImageView
            android:id="@+id/ic_clearEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/clear"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_clear"
            app:tint="@color/color_edittext_hint"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_5"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <!--    error not found-->
    <LinearLayout
        android:id="@+id/search_error_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="102dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_not_found"
            android:contentDescription="@string/not_found"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/not_found"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/string"/>

    </LinearLayout>

    <!--    error not signal-->
    <LinearLayout
        android:id="@+id/search_error_not_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="102dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_not_signal"
            android:contentDescription="@string/problems_signal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_24"
            android:gravity="center"
            android:text="@string/problems_signal"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/string"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_error_update"
            style="@style/btn_main"
            android:backgroundTint="@color/string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/update"
            android:textColor="@color/btn_update_text"
            android:textSize="14sp"
            android:textAllCaps="false"
            app:cornerRadius="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="42dp"
        android:gravity="center_horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/you_search"
            android:textColor="@color/string"
            android:textSize="19sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:ignore="InefficientWeight" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/string"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/clear_history"
            android:textAllCaps="false"
            android:textColor="@color/btn_update_text"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:cornerRadius="20dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="140dp"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="#3772E7"
        android:visibility="gone"/>

</LinearLayout>