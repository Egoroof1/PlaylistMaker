<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_main"
    android:paddingBottom="@dimen/dp_20"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:text="@string/search"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/sting"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/dp_16"
        app:icon="@drawable/ic_search_24"
        app:iconTint="@color/sting"
        app:iconGravity="textStart"/>

    <Button
        android:id="@+id/btn_media_library"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:text="@string/media_library"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/sting"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/dp_16"
        app:icon="@drawable/ic_media_library_24"
        app:iconTint="@color/sting"
        app:iconGravity="textStart"/>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:textAllCaps="false"
        android:text="@string/settings"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/sting"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/dp_16"
        app:icon="@drawable/ic_settings_24"
        app:iconTint="@color/sting"
        app:iconGravity="textStart"/>

</LinearLayout>