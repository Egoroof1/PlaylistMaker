<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_activity"
    tools:context=".PlayerActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="28dp">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar_player"
                    style="@style/toolbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@drawable/ic_back_arrow_24"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/dp_24"
                    android:layout_marginTop="26dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/album"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.666"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar_player"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/player_track_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:textSize="@dimen/sp_22"
                    android:fontFamily="@font/ys_display_medium"
                    android:textFontWeight="400"
                    android:textColor="@color/string"
                    app:layout_constraintStart_toStartOf="@id/image"
                    app:layout_constraintTop_toBottomOf="@+id/image"
                    tools:text="Yesterday (Remastered 2009)" />

                <TextView
                    android:id="@+id/player_artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textFontWeight="400"
                    android:textColor="@color/string"
                    app:layout_constraintStart_toStartOf="@id/player_track_name"
                    app:layout_constraintTop_toBottomOf="@+id/player_track_name"
                    tools:text="Yesterday (Remastered 2009)" />

                <ImageButton
                    android:id="@+id/btn_add_to_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/add_to_media_library"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_player_play"
                    app:layout_constraintStart_toStartOf="@+id/image"
                    app:layout_constraintTop_toTopOf="@+id/btn_player_play"
                    app:srcCompat="@drawable/ic_btn_add_to_playlist" />

                <ImageButton
                    android:id="@+id/btn_player_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/play_start"
                    app:layout_constraintEnd_toStartOf="@+id/btn_player_like"
                    app:layout_constraintStart_toEndOf="@+id/btn_add_to_playlist"
                    app:layout_constraintTop_toBottomOf="@+id/player_artist_name"
                    app:srcCompat="@drawable/ic_btn_play" />

                <ImageButton
                    android:id="@+id/btn_player_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/like"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_player_play"
                    app:layout_constraintEnd_toEndOf="@+id/image"
                    app:layout_constraintTop_toTopOf="@+id/btn_player_play"
                    app:srcCompat="@drawable/ic_btn_like" />

                <TextView
                    android:id="@+id/player_track_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/ys_display_medium"
                    android:textFontWeight="500"
                    android:textColor="@color/string"
                    app:layout_constraintEnd_toEndOf="@+id/btn_player_play"
                    app:layout_constraintStart_toStartOf="@+id/btn_player_play"
                    app:layout_constraintTop_toBottomOf="@+id/btn_player_play"
                    tools:text="00:30" />

                <!--    values    -->

                <TextView
                    android:id="@+id/player_track_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="@color/string"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="00:30" />

                <TextView
                    android:id="@+id/player_track_album_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="@color/string"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    android:gravity="end"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintHorizontal_weight="0.7"
                    app:layout_constraintBaseline_toBaselineOf="@id/textView3"
                    app:layout_constraintEnd_toEndOf="@+id/player_track_time2"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    tools:text="RemasterRemasterRemasterRemasterRemasterRemasterRemasterRemaster" />

                <TextView
                    android:id="@+id/player_track_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="@color/string"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textView4"
                    app:layout_constraintEnd_toEndOf="@+id/player_track_time2"
                    tools:text="2009" />

                <TextView
                    android:id="@+id/player_track_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ys_display_regular"
                    android:textColor="@color/string"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textView5"
                    app:layout_constraintEnd_toEndOf="@+id/player_track_time2"
                    tools:text="" />

                <TextView
                    android:id="@+id/player_track_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/ys_display_regular"
                    app:layout_constraintHorizontal_weight="0.7"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textColor="@color/string"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/textView6"
                    app:layout_constraintEnd_toEndOf="@+id/player_track_time2"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    tools:text="USA
            app:layout_constraintVerticasdfsdfsdfsdfdsfdf" />

                <!--    Name values    -->

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:text="@string/duration"
                    android:textColor="#AEAFB4"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/player_track_time"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/ys_display_regular"
                    app:layout_constraintHorizontal_weight="0.3"
                    android:text="@string/album"
                    android:textColor="#AEAFB4"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintVertical_chainStyle="spread"
                    app:layout_constraintEnd_toStartOf="@id/player_track_album_name"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:text="@string/year"
                    android:textColor="#AEAFB4"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:text="@string/genre"
                    android:textColor="#AEAFB4"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintVertical_chainStyle="spread"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/ys_display_regular"
                    android:text="@string/country"
                    android:textColor="#AEAFB4"
                    android:textFontWeight="400"
                    android:textSize="13sp"
                    app:layout_constraintHorizontal_weight="0.3"
                    app:layout_constraintVertical_chainStyle="spread"
                    app:layout_constraintEnd_toStartOf="@id/player_track_country"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>